{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./@types"],
    "types": ["node", "jest"],
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "rootDir": ".",
    "strict": true,
    "noEmit": false,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "outDir": "./dist",
    "declaration": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "@types/**/*",
    "tests/**/**.ts",
    "playground/**/**.ts"
  ],
  "exclude": ["node_modules"]
}
